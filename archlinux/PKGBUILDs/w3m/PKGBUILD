# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Thiago Castro <professional-dev@hotmail.com>
pkgname='w3m'
pkgver='1.0'
pkgrel=1
pkgdesc='A pager with WWW capability.'
arch=('x86_64')
url="https://git.sr.ht/~rkta/w3m/"
license=('custom')
depends=('glibc' 'gc' 'libx11' 'openssl')
makedepends=('git')
provides=("$pkgname")
conflicts=("$pkgname")
source=("$pkgname::git+$url")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  CFLAGS+=' -std=gnu17'
  PREFIX='/usr'
  ./configure --prefix="$PREFIX" --bindir="$PREFIX/bin" \
            --libdir="$PREFIX/lib" --includedir="$PREFIX/include" \
  	    --mandir="$PREFIX/share/man" \
            --with-editor="$PREFIX/bin/vim" --with-x --with-ssl \
  	    --with-gc --without-imagelib --disable-w3mmailer
  make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir" install
}
