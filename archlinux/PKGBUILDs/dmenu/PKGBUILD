# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Thiago Castro <professional-dev@hotmail.com>
pkgname='dmenu'
pkgver='1.0'
pkgrel=1
pkgdesc='A dynamic menu for X.'
arch=('x86_64')
url="https://tools.suckless.org/dmenu"
license=('MIT')
depends=('glibc' 'libx11' 'libxinerama' 'libxft' 'freetype2')
makedepends=('git')
provides=("$pkgname")
conflicts=("$pkgname")
source=("$pkgname::git+https://git.suckless.org/dmenu")
sha256sums=('SKIP')

pkgver() {
  cd "$pkgname"
  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

prepare() {
  cd "$srcdir/$pkgname"
  sed -i 's|^PREFIX = /usr/local|PREFIX = /usr|' config.mk
  sed -i 's/monospace:size=10/Terminus:size=8/' config.def.h
}

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" clean install
}
