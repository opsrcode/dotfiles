# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Thiago Castro <professional-dev@hotmail.com>
pkgname='st'
pkgver='1.0'
pkgrel=1
pkgdesc='A simple terminal implementation for X.'
arch=('x86_64')
url="https://st.suckless.org/"
license=('MIT')
depends=('glibc' 'libx11' 'libxinerama' 'libxft')
makedepends=('git')
provides=("$pkgname")
conflicts=("$pkgname")
source=("$pkgname::git+https://git.suckless.org/st")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

prepare() {
  local terminfo="share/st/terminfo"
  local dest_prefix_terminfo="-o \$(DESTDIR)\$(PREFIX)/$terminfo"
  local anysize_patch='st-expected-anysize-0.9.diff'

  cd "$srcdir/$pkgname"

  sed -i 's|^PREFIX = /usr/local|PREFIX = /usr|' config.mk
  curl -O "https://st.suckless.org/patches/anysize/$anysize_patch"
  patch -i "$anysize_patch"

  sed -i -e "/mkdir.*bin/{p;/bin/s|bin|$terminfo|;}" \
         -e "/tic/s|st\.info|$dest_prefix_terminfo st.info|" \
         Makefile

  sed -i -e '/font/s/Liberation Mono/Terminus/' \
         -e 's/size=12/size=14/' -e '/borderpx.*=/s/2/0/' \
         -e '/blinktimeout.*=/s/800/0/' \
         config.def.h
}

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" clean install
}
