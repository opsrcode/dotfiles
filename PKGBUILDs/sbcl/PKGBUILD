# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Thiago Castro <professional-dev@hotmail.com>
pkgname='sbcl'
pkgver='1.0'
pkgrel=1
pkgdesc='Steel Bank Common Lisp (SBCL) is a high performance Common Lisp compiler.'
arch=('x86_64')
url="https://sbcl.org/"
license=('CMU CL')
makedepends=('git' 'sbcl')
provides=("$pkgname")
conflicts=("$pkgname")
source=("$pkgname::git+git://git.code.sf.net/p/sbcl/sbcl")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  ./make.sh --prefix=/usr --fancy
}

package() {
  cd "$srcdir/$pkgname"
  ./install.sh
}

