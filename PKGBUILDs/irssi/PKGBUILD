# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Thiago Castro <professional-dev@hotmail.com>
pkgname='irssi'
pkgver='1.0'
pkgrel=1
pkgdesc='A modular text mode chat client.'
arch=('x86_64')
url="https://irssi.org/"
license=('GPL2')
depends=('glib2' 'openssl' 'perl' 'ncurses')
makedepends=('git' 'meson' 'ninja' 'pkgconfig')
provides=("$pkgname")
conflicts=("$pkgname")
source=("$pkgname::git+https://codeberg.org/irssi/irssi.git")
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/$pkgname"
	echo "$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/$pkgname"
	meson setup Build --prefix=/usr
	ninja -C Build
}

package() {
	cd "$srcdir/$pkgname"
	DESTDIR="$pkgdir" ninja -C Build install
}
